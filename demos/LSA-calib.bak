const byte SensorPort  =  IN_1;
#define ADDR     0x14
#include "LSA-lib.nxc"

task main ()
{

  string msg, msg0, msg1, msg2, msg3;
  string x;
	int s, i, a_speed, b_speed;

  byte message[];
  unsigned byte buf[20];
  int count, l;
  byte nByteReady = 0;

  SetSensorLowspeed(SensorPort);

	LSA_WakeUp(SensorPort, ADDR);

  Wait(10);
	msg = "LightSensorArray";
	TextOut(0, LCD_LINE1, msg, false);
	msg = "Calibration prgm";
	TextOut(0, LCD_LINE2, msg, false);
	msg = "Connect to Port1";
	TextOut(0, LCD_LINE3, msg, false);
	msg = "and keep sensor ";
	TextOut(0, LCD_LINE4, msg, false);
	msg = "on white bkgrnd.";
	TextOut(0, LCD_LINE5, msg, false);
	msg = "Press ORNGE btn ";
	TextOut(0, LCD_LINE6, msg, false);
	msg = "to continue.    ";
	TextOut(0, LCD_LINE7, msg, false);
  until(ButtonPressed(BTNCENTER, true));
	msg = "*** wait ***    ";
	TextOut(0, LCD_LINE8, msg, false);
  Wait(1500);
	LSA_SendCommand(SensorPort, ADDR, 'W');
  Wait(500);
	PlayTone(400, 60);

	msg = "Now keep sensor ";
	TextOut(0, LCD_LINE3, msg, false);
	msg = "on black bkgrnd.";
	TextOut(0, LCD_LINE4, msg, false);
	msg = "                ";
	TextOut(0, LCD_LINE5, msg, false);
	msg = "Press ORNGE btn ";
	TextOut(0, LCD_LINE6, msg, false);
	msg = "to continue.    ";
	TextOut(0, LCD_LINE7, msg, false);
	msg = "                ";
	TextOut(0, LCD_LINE8, msg, false);
  until(ButtonPressed(BTNCENTER, true));
	msg = "*** wait ***    ";
	TextOut(0, LCD_LINE8, msg, false);
  Wait(1000);
	LSA_SendCommand(SensorPort, ADDR, 'B');
	PlayTone(400, 60);
  Wait(1000);

}
